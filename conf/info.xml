<?xml version="1.0" encoding="UTF-8"?>
<addon version="0.2">
	<title xml:lang="ko">GG 우리메일 스크랩</title>
	<title xml:lang="en">GG WooriMail Scrap</title>
	<description xml:lang="ko">
		GG 우리메일 스크랩
	</description>
	<description xml:lang="en">
		GG WooriMail Scrap
	</description>
	
	<version>0.3</version>
	<date>2015-12-10</date>
	<license xml:lang="ko">GPL</license>
	<link>http://xeadmin.com</link>
	<author email_address="xeadmin@forppl.com" link="http://xeadmin.com">
		<name xml:lang="ko">GG</name>
		<name xml:lang="en">GG</name>
	</author>
	<extra_vars>
		<var name="gg_skin" type="select">
			<title xml:lang="ko">스킨 선택</title>
			<title xml:lang="en">Select Skin</title>
			<options value="default">
				<title xml:lang="ko">디폴트 스킨</title>
				<title xml:lang="en">default skin</title>
			</options>
		</var>

		<var name="text_position" type="select">
			<title xml:lang="ko">위/아래 위치</title>
			<title xml:lang="en">Vertical position</title>
			<options value="bottom">
				<title xml:lang="ko">아래</title>
				<title xml:lang="en">bottom</title>
			</options>
			<options value="top">
				<title xml:lang="ko">위</title>
				<title xml:lang="en">top</title>
			</options>
		</var>

		<var name="text_align" type="select">
			<title xml:lang="ko">왼쪽/가운데/오른쪽 정렬</title>
			<title xml:lang="en">Horizontal position</title>
			<options value="left">
				<title xml:lang="ko">왼쪽</title>
				<title xml:lang="en">left</title>
			</options>
			<options value="center">
				<title xml:lang="ko">가운데</title>
				<title xml:lang="en">centre</title>
			</options>
			<options value="right">
				<title xml:lang="ko">오른쪽</title>
				<title xml:lang="en">right</title>
			</options>
		</var>
		<var name="w_ssl" type="select">
			<title xml:lang="ko">SSL 전송 여부</title>
			<options value="Y">
				<title xml:lang="ko">SSL 전송(20080포트)</title>
			</options>
			<options value="N">
				<title xml:lang="ko">SSL 전송 안함(80포트)</title>
			</options>
			<description xml:lang="ko">SSL 전송시 20080 포트가 허용되지 않아 에러가 나는 경우 SSL 전송 안함으로 설정하세요.</description>
		</var>
		<var name="w_authkey">
			<title xml:lang="ko">우리메일 인증키</title>
			<description xml:lang="ko">발급처 : 우리메일 ( http://woorimail.com )</description>
		</var>
		<var name="w_domain">
			<title xml:lang="ko">인증키 도메인</title>
			<description xml:lang="ko">인증키를 발급 받을 때 입력하셨던 도메인입니다.</description>
		</var>

		<var name="w_sender_email">
			<title xml:lang="ko">회신받을 이메일</title>
			<description xml:lang="ko">회신받을 이메일 주소를 입력하세요.</description>
		</var>
		<var name="w_sender_nickname">
			<title xml:lang="ko">보내는 닉네임</title>
			<description xml:lang="ko">보내는 이메일의 닉네임을 입력하세요. 예)닉네임(webmaster@domain.com)</description>
		</var>

		<var name="w_wms_nick">
			<title xml:lang="ko">보내는 이메일의 닉네임</title>
			<description xml:lang="ko">보내는 이메일의 닉네임을 입력하세요. 예)닉네임@domain.com</description>
		</var>
		<var name="w_wms_domain">
			<title xml:lang="ko">보내는 이메일의 도메인</title>
			<description xml:lang="ko">무료메일은 woorimail.com 을 입력하시고, 전용채널을 이용하신다면 해당 도메인을 입력하세요. 전용채널은 유료포인트가 필요합니다. 
				예) webmaster@도메인</description>
		</var>

	</extra_vars>
</addon>